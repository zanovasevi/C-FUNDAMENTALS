using System;

namespace _02.Pounds_to_Dollars
{
    class Program
    {
        static void Main(string[] args)
        {
            decimal pound = decimal.Parse(Console.ReadLine());

            double dollar = (double)pound * 1.31;
            decimal dollarr = (decimal)dollar;

            Console.WriteLine($"{dollarr:F3}");
        }
    }
}
