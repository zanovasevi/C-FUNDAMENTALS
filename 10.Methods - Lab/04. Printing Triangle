using System;

namespace DEMO
{
    class Program
    {
        static void Main(string[] args)
        {
            int n = int.Parse(Console.ReadLine());

            PrintTriangle(n);
        }

        static void PrintTriangle(int n)
        {
            for(int i = 1; i <= n; i++)
            {
                for(int y = 1; y <= i; y++)
                {
                    Console.Write(y + " ");
                }
                Console.WriteLine();
            }
            for(int i = n; i >= 1; i--)
            {
                for(int y = 1; y < i; y++)
                {
                    Console.Write(y + " ");
                }
                Console.WriteLine();
            }
        }
    }
}
